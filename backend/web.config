<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Menentukan versi Node.js -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Mengatur iisnode logging -->
    <iisnode loggingEnabled="true" />

    <!-- Mengatur direktori default ke /public -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>

    <!-- Menangani kesalahan default -->
    <httpErrors existingResponse="PassThrough" />

    <!-- Menyertakan pengaturan rewrite URL untuk routing aplikasi frontend dan backend -->
    <rewrite>
      <rules>
        <rule name="API Routing" stopProcessing="true">
          <match url="^api/.*" />
          <action type="Rewrite" url="http://localhost:3000/{R:0}" />
        </rule>
        <rule name="React Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
